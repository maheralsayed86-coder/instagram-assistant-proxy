{
  "openapi": "3.1.0",
  "info": {
    "title": "Instagram Assistant Proxy API",
    "version": "1.0.0",
    "description": "Proxy API to manage Instagram publishing, insights, and scheduling."
  },
  "servers": [
    {
      "url": "https://instagram-assistant-proxy.vercel.app/api"
    }
  ],
  "paths": {
    "/status": {
      "get": {
        "summary": "Check server status",
        "operationId": "getStatus",
        "security": [{ "ApiKeyAuth": [] }],
        "responses": {
          "200": {
            "description": "Server is running",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "message": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/instagram/insights/account": {
      "get": {
        "summary": "Get account insights",
        "operationId": "getAccountInsights",
        "security": [{ "ApiKeyAuth": [] }],
        "responses": {
          "200": {
            "description": "Account insights retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "followers": { "type": "integer" },
                    "reach": { "type": "integer" },
                    "impressions": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/instagram/insights/media": {
      "get": {
        "summary": "Get media insights",
        "operationId": "getMediaInsights",
        "security": [{ "ApiKeyAuth": [] }],
        "responses": {
          "200": {
            "description": "Media insights retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "media_id": { "type": "string" },
                    "likes": { "type": "integer" },
                    "comments": { "type": "integer" },
                    "shares": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      }
    }
  }
}
